
@{
    ViewBag.Title = "Show";
}

<h1>Afisare articol</h1>
<h2>@ViewBag.Article.Title</h2>
<p>@ViewBag.Article.Content</p>
<p>@ViewBag.Article.Date</p>
<p>Categorie: @ViewBag.Category.CategoryName</p>
<br />
<a href="Articles/Index">Inapoi la articole.</a>
<br />
<a href="Articles/Edit/@ViewBag.Article.Id">Editeaza.</a>
<form method="post" action="Articles/Delete/@ViewBag.Article.Id">
    @Html.HttpMethodOverride(HttpVerbs.Delete);
    <button type="submit">Sterge articol.</button>
</form>
    