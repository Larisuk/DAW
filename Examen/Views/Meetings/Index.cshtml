@model Examen.Models.Meeting

<div  class="grid-container">
        @foreach (var meet in ViewBag.Meetings)
        {
            <div class="grid-item">
            <div class="card border-info mb-3" style="max-width: 30rem;">
                <div class="card-header"><h4>@meet.TitluMeet</h4></div>
                <div class="card-body">
                    <p class="card-title">Creat de: @meet.Subject.NumeSub/p>
                  
                </div>
            </div>
        </div>
        }
    </div>
        <!-- pagini -->
        <div>
            <nav aria-label="Page navigation">
                <ul class="pagination pagination-sm">
                    <li class="page-item">
                        @if (ViewBag.search != "")
                        {

                            <a class="page-link" href="/Meetings/Index?page=1&search=@ViewBag.SearchString"
                               aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        }
                        else
                        {

                            <a class="page-link" href="/Meetings/Index?page=1" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        }
                    </li>
                  
                    @for (int i = 1; i <= ViewBag.lastPage; i++)
                    {
                        if (ViewBag.search != "")
                        {
                            <li  class="page-item">
                                <a class="page-link" href="/Meetings/Index?page=@i&search=@ViewBag.SearchString">@(i)</a>
                            </li>
                        }
                        else
                        {

                            <li  class="page-item">
                                <a class="page-link" href="/Meetings/Index?page=@i">@(i)</a>
                            </li>
                        }
                    }
                    <li  class="page-item">
                        @if (ViewBag.search != "")
                        {
                            <a  class="page-link"href="/Meetings/Index?page=@(ViewBag.lastPage)&search=@ViewBag.SearchString" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        }
                        else
                        {

                            <a class="page-link" href="/Meetings/Index?page=@(ViewBag.lastPage)" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        }
                    </li>
                </ul>
            </nav>
        </div>